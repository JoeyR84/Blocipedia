<h1>Edit Post</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
      </div>
      <% if current_user.admin? || current_user.premium? %>
          <table>
            <tr>
              <th></th>
              <th>User</th>
              <th>Collaborating?</th>
            </tr>
            <% @users.each do |user| %>
            <tr>
              <td><%= check_box_tag "user_ids[]", user.id, @wiki.collaborating_users.include?(user) %>
              <td><%= user.email %></td>
              <!-- <td><%= user.collaborators ? "Yes" : "No" %></td> -->
            <% end %>
          </table>
        <div class="form-group">
          <%= f.label :private, class: 'checkbox' do %>
            <%= f.check_box :private %> Private wiki
          <% end %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
